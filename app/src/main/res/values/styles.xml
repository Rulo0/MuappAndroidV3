<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">#ff666e</item>
        <item name="android:textColorPrimary">@color/color_muapp_dark</item>
    </style>

    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_primary_color">@color/colorAccent</item>
        <item name="com_accountkit_primary_text_color">@color/colorAccent</item>
        <item name="com_accountkit_header_background_color">@color/colorAccent</item>
        <item name="com_accountkit_secondary_text_color">@color/color_muapp_dark</item>
        <item name="com_accountkit_button_text_color">@android:color/white</item>
        <item name="com_accountkit_status_bar_color">@color/colorAccent</item>
        <item name="com_accountkit_input_accent_color">?attr/com_accountkit_primary_color</item>
        <item name="com_accountkit_input_border_color">?attr/com_accountkit_primary_color</item>

    </style>

    <style name="main_button_layout_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:theme">@style/color_button_main</item>
    </style>

    <style name="color_button_main" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="green_button_layout_style">
        <item name="android:theme">@style/color_button_green</item>
    </style>

    <style name="color_button_green" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/color_muap_green</item>
    </style>

    <style name="dark_button_layout_style">
        <item name="android:theme">@style/color_button_dark</item>
    </style>

    <style name="color_button_dark" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/color_muapp_button_light</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="colorControlHighlight">#ff666e</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarMatching" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Text chat styles -->

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>
