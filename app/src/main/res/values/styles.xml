<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/color_muapp_dark</item>
    </style>

    <style name="AppLoginTheme" parent="Theme.AccountKit">
        <item name="com_accountkit_primary_color">@color/colorAccent</item>
        <item name="com_accountkit_primary_text_color">@color/colorAccent</item>
        <item name="com_accountkit_header_background_color">@color/colorAccent</item>
        <item name="com_accountkit_secondary_text_color">@color/color_muapp_dark</item>
        <item name="com_accountkit_button_text_color">@android:color/white</item>
        <item name="com_accountkit_status_bar_color">@color/colorAccent</item>
        <item name="com_accountkit_input_accent_color">?attr/com_accountkit_primary_color</item>
        <item name="com_accountkit_input_border_color">?attr/com_accountkit_primary_color</item>

    </style>

    <style name="main_button_layout_style">
        <item name="android:theme">@style/color_button_main</item>
    </style>

    <style name="color_button_main" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="green_button_layout_style">
        <item name="android:theme">@style/color_button_green</item>
    </style>

    <style name="color_button_green" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/color_muap_green</item>
    </style>

    <style name="dark_button_layout_style">
        <item name="android:theme">@style/color_button_dark</item>
    </style>

    <style name="color_button_dark" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorButtonNormal">@color/color_muapp_button_light</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Text chat styles -->

    <style name="LeftBubbleVoiceTheme" parent="AppTheme">
        <item name="colorAccent">#ff38ab91</item>
    </style>

    <style name="RightBubbleVoiceTheme" parent="AppTheme">
        <item name="colorAccent">#fffca9ad</item>
    </style>

    <style name="LeftBubbleStyle">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/bk_chat_bubble_other</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="RightBubbleStyle">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/bk_chat_bubble_you</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WeightWidth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="WeightHeight">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
