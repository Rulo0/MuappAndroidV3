<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="64dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_message_receiver"
    android:orientation="vertical"
    android:padding="8dp">

    <com.github.curioustechizen.ago.RelativeTimeTextView
        android:id="@+id/txt_time_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_content_receiver"
        android:layout_below="@+id/txt_content_receiver"
        android:layout_marginTop="4dp"
        android:text="hora" />

    <TextView
        android:id="@+id/txt_content_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingRight="8dp"
        android:text="probando 123" />
</RelativeLayout>