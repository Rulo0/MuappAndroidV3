                android:textColor="@android:color/white" />

        </LinearLayout>
    </RelativeLayout>-->
    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/imb_dialog_base_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:elevation="10dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_muapp_dialog_round_white_alpha" />

    <ImageView
        android:id="@+id/imb_dialog_base_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imb_dialog_base_white"
        app:layout_constraintLeft_toLeftOf="@+id/imb_dialog_base_white"
        app:layout_constraintRight_toRightOf="@+id/imb_dialog_base_white"
        app:layout_constraintTop_toTopOf="@+id/imb_dialog_base_white"
        app:srcCompat="@drawable/bg_muapp_dialog_round_red" />

    <ImageView
        android:id="@+id/imb_dialog_container"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/imb_dialog_base_white"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/imb_dialog_base_white"
        app:layout_constraintRight_toRightOf="@+id/imb_dialog_base_white"
        app:layout_constraintTop_toTopOf="@+id/imb_dialog_base_white"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@drawable/ic_star_filled_white" />

    <ImageButton
        android:id="@+id/btn_dismiss_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_muapp_dialog"
        app:layout_constraintVertical_bias="0.84000003"
        app:srcCompat="@drawable/ic_dismiss_dialog" />


</android.support.constraint.ConstraintLayout>